<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet id="1" author="Liquibase">
        <createTable
                schemaName="cinema"
                tableName="department">
            <column name="department_id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="name_department" type="varchar"/>
        </createTable>
        <insert
                schemaName="cinema"
                tableName="department">
            <column name="department_id" value="1"/>
            <column name="name_department" value="Кафедра математики"/>
        </insert>
        <insert
                schemaName="cinema"
                tableName="department">
            <column name="department_id" value="2"/>
            <column name="name_department" value="Кафедра физики"/>
        </insert>
        <insert
                schemaName="cinema"
                tableName="department">
            <column name="department_id" value="3"/>
            <column name="name_department" value="Кафедра информатики"/>
        </insert>

    </changeSet>
    <changeSet id="2" author="Liquibase">
        <createTable
                schemaName="cinema"
                tableName="program">
            <column name="program_id" type="int"/>
            <column name="name_program" type="varchar"/>
            <column name="department_id" type="int"/>
            <column name="plan" type="varchar"/>
        </createTable>
        <insert
                schemaName="cinema"
                tableName="program">
            <column name="program_id" value="1"/>
            <column name="name_program" value="Бакалавриат"/>
            <column name="department_id" value="1"/>
            <column name="plan" value="Учебный"/>

        </insert>
        <insert
                schemaName="cinema"
                tableName="program">
            <column name="program_id" value="2"/>
            <column name="name_program" value="Магистратура"/>
            <column name="department_id" value="3"/>
            <column name="plan" value="Производственный"/>
        </insert>

    </changeSet>
    <changeSet id="3" author="Liquibase">
        <createTable
                schemaName="cinema"
                tableName="students">
            <column name="student_id" type="int"/>
            <column name="name_student" type="varchar"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
